generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "debian-openssl-3.0.x"]
    output        = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id           Int      @id @default(autoincrement())
    username     String   @unique
    displayName  String?
    avatarUrl    String?
    passwordSalt String
    passwordHash String
    createdAt    DateTime @default(now())

    authoredMessages Message[] @relation(name: "authoredMessages")
    recievedMessages Message[] @relation(name: "recievedMessages")

    friendshipsInitiated   Friend[]       @relation(name: "friendshipsInitiated")
    friendshipsReceived    Friend[]       @relation(name: "friendshipsReceived")
}

model Message {
    id          Int      @id @default(autoincrement())
    authorId    Int
    recipientId Int
    content     String
    createdAt   DateTime @default(now())

    author    User @relation(name: "authoredMessages", fields: [authorId], references: [id], onDelete: Cascade)
    recipient User @relation(name: "recievedMessages", fields: [recipientId], references: [id], onDelete: Cascade)
}

model Friend {
    id        Int      @id @default(autoincrement())
    userId    Int
    friendId  Int
    createdAt DateTime @default(now())

    user   User @relation(name: "friendshipsInitiated", fields: [userId], references: [id], onDelete: Cascade)
    friend User @relation(name: "friendshipsReceived", fields: [friendId], references: [id], onDelete: Cascade)
}
